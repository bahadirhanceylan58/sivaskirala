rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // In a real app, you might check a custom claim or a field in the user document.
      // For this demo, we'll check if the user doc has role == 'admin'.
      // Note: This requires an extra read, which costs money/performance.
      // A better way is Custom Claims via Firebase Admin SDK.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read basic profile info (needed for product owner details)
      allow read: if true;
      
      // Only the user themselves or an admin can write
      allow write: if isSignedIn() && (isOwner(userId) || isAdmin());
    }

    // Products collection
    match /products/{productId} {
      // Anyone can view products
      allow read: if true;
      
      // Only authenticated users can create
      allow create: if isSignedIn();
      
      // Only the owner or admin can update/delete
      // Resource operations check the existing document (resource.data)
      allow update, delete: if isSignedIn() && (resource.data.owner_id == request.auth.uid || isAdmin());
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Users can see their own bookings (as renter) or bookings for their products (as owner - complex query)
      // and Admins can see all.
      allow read: if isSignedIn() && (
        resource.data.renter_id == request.auth.uid || 
        isAdmin()
      );
      
      // Authenticated users can create bookings
      allow create: if isSignedIn();
      
      // Admins can update status (approve etc.)
      allow update: if isSignedIn() && isAdmin();
    }
  }
}
